<% if notice %>
  <p id="notice">
    <%= notice %>
  </p>
<% end %>
  <h1>Catalogo libri</h1>
  <ul class="list-group">
  <% @products.each do |product| %>
    <li class="list-group-item entry">
      <span class="titleProduct">
        <h3><%= product.title %></h3>
      </span>
      <span class="imageProduct">
        <%= image_tag(product.image_url) %>
      </span>
      <span class="descriptionProduct">
        <%= sanitize(product.description) %>
      </span>
      <span class="priceProduct">
        <%= number_to_currency(product.price) %>
      </span>
      <%= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn btn-info" %>
    </li>
  <% end %>
  </ul>
